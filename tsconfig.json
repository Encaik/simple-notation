{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "Bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@components": [
        "lib/src/components"
      ],
      "@config": [
        "lib/src/config"
      ],
      "@core": [
        "lib/src/core"
      ],
      "@types": [
        "lib/src/types"
      ],
      "@utils": [
        "lib/src/utils"
      ]
    }
  },
  "include": [
    "src",
    "lib"
  ]
}